{{#if:article}}
  <div class="col-md-6 column content">
    <h3 class="title">{{ article.title }}</h3>

    {{#if:story}}
      <span class="author"><a href="{{ article.url }}">{{ article.via }}</a> | By {{ story.author }}</span>
    {{/}}

    <hr />

    <div class="inner-content">

      {{#if:story}}
        {{ html: story.html | xss }}
      {{/else}}
        loading story...
      {{/}}
    </div>
  </div>
{{/}}